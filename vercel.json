{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/health",
        "dest": "server.js",
        "methods": ["GET"]
      },
      {
        "src": "/api/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/uploads/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "functions": {
      "server.js": {
        "maxDuration": 30,
        "memory": 1024
      }
    }
  }